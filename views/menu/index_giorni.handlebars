<div class="container">
    <div class="row">
        <div class=" col-sm-1 col-md-2 col-lg-2"></div>
        <div class="col-xs-12 col-sm-10 col-md-8 col-lg-8">
            <div class="row">
                <h3 >Lista dei Giorni in cui puoi ordinare</h3>
            </div>
            <ul class="list-group">
                {{#each days}}
                    <li class="list-group-item">
                        <!-- Next Feature: parametrizzare la settimana nell'ancora sottostante -->
                        <a href="giorno/{{this}}" class="giorno">{{this}}</a>
                    </li>
                {{/each}}
            </ul>
        </div>
        <div class=" col-sm-12 col-md-2 col-lg-2"></div>
    </div>
</div>